{
  "extends": "@quasar/app/tsconfig-preset",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "**/build/**",
    "**/coverage/**",
    "**/dist/**",
    "**/node_modules/**",
    "./src-pwa/**",
    "./src-cordova/**"
  ]
}
