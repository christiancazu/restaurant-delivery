{
  "compilerOptions": {
    "lib": [
      "es5", "es6", "dom", "dom.iterable"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["core/*"],
      "@common/*": ["../common/*"],
    }
  },
  "include": ["./src", "./core"],
  "exclude": [
    "**/build/**",
    "**/dist/**",
    "**/node_modules/**",
    "./src-pwa/**",
    "./src-cordova/**"
  ]
}
