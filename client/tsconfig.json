{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["core/*"],
    }
  },
  "include": ["./src"],
  "exclude": [
    "**/build/**",
    "**/dist/**",
    "**/node_modules/**",
    "./src-pwa/**",
    "./src-cordova/**"
  ]
}
