{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "moduleResolution": "classic",
    "module": "commonjs",
    "target": "es6",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["core/*"],
      "@common/*": ["../common/*"],
    }
  },
  "include": ["./src", "./core"],
  "exclude": [
    "**/build/**",
    "**/dist/**",
    "**/node_modules/**",
    "./src-pwa/**",
    "./src-cordova/**"
  ]
}
